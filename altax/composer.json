{
  "name": "kohkimakimoto/altax",
  "description": "Altax is an extensible deployment tool for PHP.",
  "keywords": ["deploy", "deployment", "ssh", "altax"],
  "homepage": "https://github.com/kohkimakimoto/altax",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Kohki Makimoto",
      "email": "kohki.makimoto@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "composer/composer": "1.0.*@dev",
    "symfony/console": "2.5.*",
    "symfony/filesystem": "2.5.*",
    "symfony/yaml": "2.5.*",
    "symfony/finder": "2.5.*",
    "symfony/process": "2.5.*",
    "phpseclib/phpseclib": "0.3.*"
  },
  "scripts": {
    "post-install-cmd": [
      "Altax\\Script\\ScriptHandler::removeAutoloadFiles"
    ],
    "post-update-cmd": [
      "Altax\\Script\\ScriptHandler::removeAutoloadFiles"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "3.*",
    "satooshi/php-coveralls": "dev-master"
  },
  "autoload": {
    "psr-0": { "Altax\\": "src/"}
  },
  "extra": {
      "branch-alias": {
          "dev-master": "3.0.x-dev"
      }
  },
  "bin": ["bin/altax"]
}
